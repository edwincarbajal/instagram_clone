<%= provide(:title, "Edit") %>
<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        edwin
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image.url(:medium), class: "img-fluid"%>
    </div>
    <%= simple_form_for @post, multipart: true, html: { class: "form-horizontal" } do |f| %>
      <div class="form-group text-center">
         <%= f.input :caption %>
      </div>
      <div class="form-group text-center">
        <%= link_to 'Cancel', root_path, class: "btn btn-danger" %>
       <%= f.submit :submit, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
