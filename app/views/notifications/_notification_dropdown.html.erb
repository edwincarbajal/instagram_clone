<% unless notification_counter(current_user) %>
  <span id="notification_count"><%= current_user.notifications.where(read: false).count %></span>
<% end %>
<%= link_to fa_icon('flag-o'), '#', class: 'nav-link', id: 'notificationLink' %>
<!-- Notification Popup Code... -->
<div id="notificationContainer">
  <div id="notificationTitle">Notifications</div>
  <div id="notificationsBody" class="notifications">
    <ul>
      <%= render current_user.notifications.order('created_at DESC') %>
